#header.padded
  .container.row
    .one.third
      BotForge
    .two.thirds.align-right
      - if current_user
        Welcome,
        = current_user.username
        = link_to 'Bots', bots_path
        = link_to 'Log out', session_path, method: :delete
      - else
        = link_to 'Register', new_user_path
        = link_to 'Log in', new_session_path